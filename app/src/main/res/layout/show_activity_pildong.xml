<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/picture6" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#828282"
        android:fontFamily="@font/nanumsquare_acb"
        android:text="필동면옥"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n평양냉면 전문점\n 서울 중구 서애로 26 (필동3가 1-5)\n"
        android:textAlignment="center"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text=" 냉면 --------- 12,000원 \n\n"
                android:textSize="20dp" />

            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text=" 비빔냉면 ---- 12,000원 \n\n"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="접시만두 ---- 12,000원 \n\n"
                android:textSize="20dp" />

            <TextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="제육 --------- 24,000원 \n\n"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="냉면을 먹기 전에 꼭 먹어줘야 하는 만두와 편육"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="위반사항 : 처분일자 20170831 // 제 71조 // 식품 및 조리 도구의 위생 취급에 문제가 있던 것으로 예상 - 시정명령으로 인한 시정 완료"
        android:textSize="15dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="평가하기" />

</LinearLayout>